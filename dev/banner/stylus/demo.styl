.banner
	position relative
	width 20rem
	height 10rem
	a
		position absolute
		top 0
		display block
		width @width
		height @height
		background-size 100% 100%
		background-repeat no-repeat
		&.first
			z-index 1
		&.current
			animation current .5s forwards
			z-index 1
		&.previous
			animation previous .5s forwards
			z-index 1
@keyframes current
	from
		left 20rem
	to
		left 0rem
@keyframes previous 
	from
		left 0rem
	to
		left -20rem