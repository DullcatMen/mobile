//background-color,font-size,color,position,relative,absolute,top,bottom,left,right,@keyframes,text-align,center,height,width

.banner
	position relative
	width 20rem
	height 10rem
	overflow hidden
	a
		position absolute
		top 0
		display block
		width @width
		height @height
		background-size 100% 100%
		background-repeat no-repeat
		&:first-of-type
			left 0
		&:not(:first-of-type)
			left 20rem
		&.current
			animation current .5s forwards
		&.previous
			animation previous .5s forwards
		&.init
			animation init .25s forwards
		&.ltr
			animation ltr .25s forwards
		&.rtl
			animation rtl .25s forwards
	.indicator
		position absolute
		bottom .6rem
		width 20rem
		z-index 2
		text-align center
		em
			margin-right .6rem
			padding .06rem .36rem
			background-color red
			color #fff
			font-size .75rem
			&.current
				background-color #000
@keyframes current
	from
		left 20rem
	to
		left 0rem
@keyframes previous 
	from
		left 0rem
	to
		left -20rem
@keyframes init
	to
		left 0
@keyframes ltr
	to
		left 20rem
@keyframes rtl
	to
		left -20rem