.article	
	h1
		overflow hidden
		white-space nowrap
		text-overflow ellipsis
	img
		display block
		
@media (max-width 414px)
	.article
		position relative
		margin 5px
		padding 5px
		height 110px
		h1
			font-size 20px
			line-height 24px
			margin-left 105px
		.time
			position absolute
			right 40px
			bottom 5px
			font-size 12px
			.year
				display none
		.author
			position absolute
			right 5px
			bottom 5px
			font-size 12px
		img
			position absolute
			top 5px
			left 5px
			width 100px
			height @width
		.content
			display -webkit-box
			overflow hidden
			-webkit-line-clamp 3
			-webkit-box-orient vertical
			margin-left 105px
			text-overflow ellipsis
			font-size 12px
			line-height 16px

//大屏
@media (min-width 414px)
	.article
		margin 0 auto
		padding 20px
		width 1200px
		h1
			padding 0 80px
			font-size 36px
			text-align center
			line-height 2
		.time
			text-align center
		.author
			padding-right 14px
			text-align right
			&:before
				content "作者:"
		img
			width 400px
			height 300px
			margin 40px auto
		.content
			font-size 14px
			text-indent @font-size * 2
			line-height 1.5

//手机
@media (max-width 320px)
	.article
		width 310px		

@media (min-width 320px) and (max-width 375px)
	.article
		width 365px

@media (min-width 375px) and (max-width 414px)
	.article
		width 404px
		
			